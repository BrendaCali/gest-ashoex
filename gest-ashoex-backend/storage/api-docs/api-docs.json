{
    "openapi": "3.0.0",
    "info": {
        "title": "API Health Check",
        "description": "API para verificar el estado de salud del sistema",
        "version": "1.0.0"
    },
    "paths": {
        "/api/facilidades/{id}": {
            "put": {
                "tags": [
                    "Facilidades"
                ],
                "summary": "Actualizar facilidad",
                "operationId": "5ad8d80e3ca636415dc9d1d58af008e9",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la facilidad",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "nombre_facilidad": {
                                        "description": "Nombre de la facilidad",
                                        "type": "string",
                                        "example": "Proyector"
                                    },
                                    "id_aula": {
                                        "description": "ID del aula",
                                        "type": "integer",
                                        "example": "1"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Facilidad actualizada correctamente"
                    },
                    "404": {
                        "description": "Facilidad no encontrada"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/api/health": {
            "get": {
                "tags": [
                    "Health Check"
                ],
                "summary": "Verifica el estado de la API y la conexión a la base de datos",
                "description": "Devuelve el estado de salud del sistema",
                "operationId": "7134f626524ee8957bd6315b959ed4e1",
                "responses": {
                    "200": {
                        "description": "Estado de salud correcto",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "healthy"
                                        },
                                        "database": {
                                            "type": "string",
                                            "example": "Connected"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error en la conexión a la base de datos"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Facilidades",
            "description": "Facilidades"
        },
        {
            "name": "Health Check",
            "description": "Health Check"
        }
    ]
}