{
    "openapi": "3.0.0",
    "info": {
        "title": "API Health Check",
        "description": "API para verificar el estado de salud del sistema",
        "version": "1.0.0"
    },
    "paths": {
        "/api/carreras": {
            "post": {
                "tags": [
                    "Carreras"
                ],
                "summary": "Almacena una nueva carrera en la base de datos",
                "operationId": "3430b5198844e6744484d7e1b441db8f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre",
                                    "nro_semestres"
                                ],
                                "properties": {
                                    "nombre": {
                                        "type": "string",
                                        "example": "Licenciatura en Ingeniería Informática"
                                    },
                                    "nro_semestres": {
                                        "type": "number",
                                        "example": 10
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Carrera creada exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "nombre": {
                                                        "type": "string",
                                                        "example": "Ejemplo"
                                                    },
                                                    "nro_semestres": {
                                                        "type": "number",
                                                        "example": 10
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "error": {
                                            "type": "array",
                                            "items": {},
                                            "example": []
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Operación exitosa"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error de validación",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {},
                                            "example": []
                                        },
                                        "error": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "code": {
                                                        "type": "string",
                                                        "example": "400"
                                                    },
                                                    "detail": {
                                                        "type": "string",
                                                        "example": "El campo 'nombre' es requerido."
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error en la conexión a la base de datos"
                    }
                }
            }
        },
        "/api/carreras/{id}": {
            "get": {
                "tags": [
                    "Carreras"
                ],
                "summary": "Obtiene los detalles de una carrera por su ID",
                "operationId": "8a30939fbecca1a64e1dbcdb8a97d059",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la carrera",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operación exitosa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "nombre": {
                                                    "type": "string",
                                                    "example": "Ingeniera Informatica"
                                                },
                                                "nro_semestres": {
                                                    "type": "number",
                                                    "example": 10
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "error": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "example": []
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Operación exitosa"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "La carrera no existe",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {},
                                            "example": []
                                        },
                                        "error": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "La carrera no existe"
                                            }
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Operación fallida"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error en el servidor interno",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {},
                                            "example": []
                                        },
                                        "error": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "Ocurrió un error inesperado"
                                            }
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Operación fallida"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/health": {
            "get": {
                "tags": [
                    "Health Check"
                ],
                "summary": "Verifica el estado de la API y la conexión a la base de datos",
                "description": "Devuelve el estado de salud del sistema",
                "operationId": "7134f626524ee8957bd6315b959ed4e1",
                "responses": {
                    "200": {
                        "description": "Estado de salud correcto",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "healthy"
                                        },
                                        "database": {
                                            "type": "string",
                                            "example": "Connected"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error en la conexión a la base de datos"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Carreras",
            "description": "Carreras"
        },
        {
            "name": "Health Check",
            "description": "Health Check"
        }
    ]
}