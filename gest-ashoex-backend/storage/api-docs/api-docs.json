{
    "openapi": "3.0.0",
    "info": {
        "title": "API Health Check",
        "description": "API para verificar el estado de salud del sistema",
        "version": "1.0.0"
    },
    "paths": {
        "/api/aulas/{id}": {
            "get": {
                "tags": [
                    "Aulas"
                ],
                "summary": "Obtener información de un aula específica",
                "description": "Retorna los detalles de un aula por su ID, incluyendo sus usos y facilidades.",
                "operationId": "getAulaById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del aula",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Éxito. Datos del aula obtenidos correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "numero_aula": {
                                            "type": "string",
                                            "example": "A101"
                                        },
                                        "capacidad": {
                                            "type": "integer",
                                            "example": 40
                                        },
                                        "habilitada": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "id_ubicacion": {
                                            "type": "integer",
                                            "example": 2
                                        },
                                        "usos": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "nombre": {
                                                        "type": "string",
                                                        "example": "Clases"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "facilidades": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "descripcion": {
                                                        "type": "string",
                                                        "example": "Proyector"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No encontrado. Aula no existe",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Aula no encontrada"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/health": {
            "get": {
                "tags": [
                    "Health Check"
                ],
                "summary": "Verifica el estado de la API y la conexión a la base de datos",
                "description": "Devuelve el estado de salud del sistema",
                "operationId": "7134f626524ee8957bd6315b959ed4e1",
                "responses": {
                    "200": {
                        "description": "Estado de salud correcto",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "healthy"
                                        },
                                        "database": {
                                            "type": "string",
                                            "example": "Connected"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error en la conexión a la base de datos"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Aulas",
            "description": "Aulas"
        },
        {
            "name": "Health Check",
            "description": "Health Check"
        }
    ]
}